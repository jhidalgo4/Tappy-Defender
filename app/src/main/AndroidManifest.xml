<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.utep.cs.cs4381.tappydefender">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_tappy_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_tappy_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="edu.utep.cs.cs4381.tappydefender.GameActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        </activity>

        <activity android:name="edu.utep.cs.cs4381.tappydefender.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>